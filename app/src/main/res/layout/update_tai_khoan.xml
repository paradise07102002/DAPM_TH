<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/update_tk_back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_back1"/>
        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="55dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Thay đổi thông tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edit_edittext2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:inputType="text"
            android:text="Họ tên: "
            android:textSize="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@drawable/edit_null"
            android:id="@+id/update_tk_name"
            android:inputType="text"
            android:textSize="16dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edit_edittext2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:inputType="text"
            android:text="Email: "
            android:textSize="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@drawable/edit_null"
            android:id="@+id/update_tk_email"
            android:inputType="text"
            android:textSize="16dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/edit_edittext2"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:inputType="text"
            android:text="Số điện thoại: "
            android:textSize="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@drawable/edit_null"
            android:id="@+id/update_tk_phone"
            android:inputType="text"
            android:textSize="16dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/update_tk_update"
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật" />
</LinearLayout>